<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="unity" type="Microsoft.Practices.Unity.Configuration.UnityConfigurationSection, Microsoft.Practices.Unity.Configuration"/>
  </configSections>

  <unity xmlns="http://schemas.microsoft.com/practices/2010/unity">

    <alias alias="singleton" type="Microsoft.Practices.Unity.ContainerControlledLifetimeManager, Microsoft.Practices.Unity"/>
    <alias alias="IStrategy" type="UnitySample.IStrategy, UnitySample"/>
    <alias alias="StrategyOne" type="UnitySample.StrategyOne, UnitySample"/>

    <containers>
      <container>

        <register type="IStrategy" name="StrategyOne" mapTo="StrategyOne">
          <lifetime type="singleton"/>
        </register>

        <register type="UnitySample.IStrategy, UnitySample" name="StrategyTwo" mapTo="UnitySample.StrategyTwo, UnitySample">
          <lifetime type="singleton"/>
        </register>

        <register type="UnitySample.Game, UnitySample" mapTo="UnitySample.Game, UnitySample">
          <lifetime type="singleton"/>
          <property name="Age">
            <value value="11"/>
          </property>
          <property name="TheStrategy">
            <optional name="StrategyTwo" />
          </property>
        </register>

      </container>
    </containers>
  </unity>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
  </startup>
</configuration>
